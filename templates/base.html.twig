{% set pageName = app.request.get('_route') %}
{% set locale = app.request.get('_locale') %}

{% set theme_color = '#492819' %}

{% set analitycs = false %}
{% set preload = false %}
{% set cookies = false %}
{% set wp_btn = false %}

{% set openSans = false %}
{% set roboto = false %}
{% set lato = false %}
{% set montserrat = true %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
        <meta name="Description" content="{{ website.name }}" />
        <meta name="Keywords" content="{{ website.name }}" />
        <meta name="title" content="{{ website.name }}" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="format-detection" content="telephone=no" />
        <meta name="theme-color" content="{{ theme_color }}" />
        <meta name="msapplication-navbutton-color" content="{{ theme_color }}" />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-status-bar-style" content="{{ theme_color }}" />
        <meta http-equiv="Cache-Control" content="no-store" />

        {% if app.environment == 'dev' %}
            <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests" />
        {% endif %}

        <base href="{{ app.request.getSchemeAndHttpHost() }}" />

        <title>
            {% block title %}
                {{ website.name }}
            {% endblock title %}
        </title>

        <link rel="dns-prefetch" href="//ajax.googleapis.com" />
        <link rel="dns-prefetch" href="//fonts.googleapis.com" />
        <link rel="dns-prefetch" href="//maps.googleapis.com" />

        <!-- fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

        {% if roboto %}
            <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap"
                rel="stylesheet" />
        {% endif %}

        {% if openSans %}
            <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700;800&display=swap"
                rel="stylesheet" />
        {% endif %}

        {% if lato %}
            <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700;900&display=swap"
                rel="stylesheet" />
        {% endif %}

        {% if montserrat %}
            <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800;900&display=swap"
                rel="stylesheet" />
        {% endif %}

        {# favicon #}
        <link rel="shortcut icon" href="{{ asset('build/website/images/favicon/favicon.ico') }}" type="image/x-icon" />
        <link rel="apple-touch-icon" href="{{ asset('build/website/images/favicon/apple-touch-icon.ico') }}" />
        <link rel="apple-touch-icon"
            sizes="57x57"
            href="{{ asset('build/website/images/favicon/apple-touch-icon-57x57.ico') }}" />
        <link rel="apple-touch-icon"
            sizes="72x72"
            href="{{ asset('build/website/images/favicon/apple-touch-icon-72x72.ico') }}" />
        <link rel="apple-touch-icon"
            sizes="76x76"
            href="{{ asset('build/website/images/favicon/apple-touch-icon-76x76.ico') }}" />
        <link rel="apple-touch-icon"
            sizes="114x114"
            href="{{ asset('build/website/images/favicon/apple-touch-icon-114x114.ico') }}" />
        <link rel="apple-touch-icon"
            sizes="120x120"
            href="{{ asset('build/website/images/favicon/apple-touch-icon-120x120.ico') }}" />
        <link rel="apple-touch-icon"
            sizes="144x144"
            href="{{ asset('build/website/images/favicon/apple-touch-icon-144x144.ico') }}" />
        <link rel="apple-touch-icon"
            sizes="152x152"
            href="{{ asset('build/website/images/favicon/apple-touch-icon-152x152.ico') }}" />
        <link rel="apple-touch-icon"
            sizes="180x180"
            href="{{ asset('build/website/images/favicon/apple-touch-icon-180x180.ico') }}" />

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}

        {% endblock stylesheets %}
    </head>
    <body class="pg-{{ pageName }} {{ getBrowser(app.request.headers.get('User-Agent')) }} {{
        getPlatform(
            app.request.headers.get('User-Agent')
        )
        }} lg {{ locale }}">
        {% block body %}

        {% endblock body %}

        {% block javascripts %}

        {% endblock javascripts %}
    </body>
</html>
